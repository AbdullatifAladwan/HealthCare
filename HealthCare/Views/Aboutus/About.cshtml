@model Tuple<IEnumerable<HealthCare.Models.Testimonial>,IEnumerable<HealthCare.Models.Aboutu>,IEnumerable<HealthCare.Models.Doctor>>

@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_Home.cshtml";
}


<section class="page-title bg-1">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="block text-center">
          <span class="text-white">About Us</span>
          <h1 class="text-capitalize mb-5 text-lg">About Us</h1>

         
      </div>
    </div>
  </div>
</section>

<section class="section about-page">
	<div class="container">
		<div class="row">
			<div class="col-lg-4">
				<h2 class="title-color">Personal care for your healthy living</h2>
			</div>
			<div class="col-lg-8">
				<p>We take care of your personal health and the health of your family members and provide the necessary requirements , Our website becomes better with you and your trust in us.</p>
				
			</div>
		</div>
	</div>
</section>
<section class="fetaure-page ">
	<div class="container">
		<div class="row">
			<tbody>
@foreach (var item in Model.Item2) {
			<div class="col-lg-3 col-md-6">
				<div class="about-block-item mb-5 mb-lg-0">
					<img src="@Url.Content("~/Images/"+item.BackgroundImage)" alt="Image"  class="img-fluid w-100">
					<h4 class="mt-3">@Html.DisplayFor(modelItem => item.Description)</h4>
					<p>@Html.DisplayFor(modelItem => item.Pargraph1)</p>
				</div>
			</div>
			}</tbody>
		
</section>


<section class="section team">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-lg-6">
				<div class="section-title text-center">
					<h2 class="mb-4">The Best Doctor</h2>
					<div class="divider mx-auto my-4"></div>
				</div>
			</div>
		</div>

		<div class="row">
						<tbody>
@foreach (var item in Model.Item3) {
			<div class="col-lg-3 col-md-6 col-sm-6">
				<div class="team-block mb-5 mb-lg-0">
					<img src="@Url.Content("~/Images/"+item.Imagepath)" alt="Image" class="img-fluid w-100">

					<div class="content">
						<h4 class="mt-4 mb-0">@Html.DisplayFor(modelItem => item.Firstname) @Html.DisplayFor(modelItem => item.Lastname)</h4>
						<p>@Html.DisplayFor(modelItem => item.Specialization.Specialization1)</p>
					</div>
				</div>
			</div>
			}</tbody>

</section>

<section class="section testimonial">
	<div class="container">
		<div class="row">
			<div class="col-lg-6 offset-lg-6">
				<div class="section-title">
					<h2 class="mb-4">What they say about us</h2>
					<div class="divider  my-4"></div>
				</div>
			</div>
		</div>
		<div class="row align-items-center">

			<div class="col-lg-6 testimonial-wrap offset-lg-6">				<tbody>
@foreach (var item in Model.Item1) {
				<div class="testimonial-block">
					<div class="client-info ">
						<h4>@Html.DisplayFor(modelItem => item.Name)</h4>
					</div>
					<p>
@Html.DisplayFor(modelItem => item.Feedback)					</p>
					<i class="icofont-quote-right"></i>
					</div>
				
				}</tbody></div>

			
</section>
